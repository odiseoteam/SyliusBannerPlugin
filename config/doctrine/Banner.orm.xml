<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Odiseo\SyliusBannerPlugin\Entity\Banner" table="odiseo_banner">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="code" type="string" unique="true"/>
        <field name="enabled" type="boolean"/>
        <field name="createdAt" type="datetime" column="created_at">
            <gedmo:timestampable on="create"/>
        </field>
        <field name="updatedAt" type="datetime" column="updated_at">
            <gedmo:timestampable on="update"/>
        </field>

        <many-to-many field="channels" target-entity="Sylius\Component\Channel\Model\ChannelInterface">
            <join-table name="odiseo_banners_channels">
                <join-columns>
                    <join-column name="banner_id" referenced-column-name="id" on-delete="CASCADE"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="channel_id" referenced-column-name="id"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-many field="taxons" target-entity="Sylius\Component\Taxonomy\Model\TaxonInterface">
            <join-table name="odiseo_banners_taxons">
                <join-columns>
                    <join-column name="banner_id" referenced-column-name="id" on-delete="CASCADE"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="taxon_id" referenced-column-name="id"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </mapped-superclass>
</doctrine-mapping>
